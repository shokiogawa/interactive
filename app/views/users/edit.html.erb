
    <div class="row">
           <div class="col-sm-3 offset-sm-1">
             <div class="card">
               <div class="card-header">
                <h5 class="card-title">Profile Image</h5>
              </div>
             <div class="card-body">
                    <% if @user.image_url %>
                     <%= image_tag @user.image_url %>
                    <% else %>
                      <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
                    <% end %>
             </div>
            </div>  
          </div>
           
          
         <div class="col-sm-6 offset-sm-1">
             <h2>プロフィール編集画面</h2>
          <%= form_with(model: @user, local:true) do |f| %>
          
            <div class="form-group">
              <%= f.label :image, "プロフィール画像" %><br>
              <%= f.file_field :image %>
            </div>
             
          <div class="form-group row">
            <%= f.label :name, "名前", class:"col-form-label col-sm-2" %>
            <%= f.text_field :name, class:"form-control col-sm-10" %>
          </div>
        
          <div class="form-group row">
            <%= f.label :lang1, "母国語", class:"col-form-label col-sm-2" %>
            <%= f.select :lang1, [["日本語","日本語"],["英語","英語"],["中国語","中国語"],["フランス語","フランス語"],["イタリア語","イタリア語"],["スペイン語","スペイン語"],["韓国語","韓国語"]], include_blank: "選択してください",class:"form-control col-sm-7" %>
          </div>
        
          <div class="form-group row">
            <%= f.label :lang2, "第二言語", class:"col-form-label col-sm-2" %>
            <%= f.select :lang2, [["日本語","日本語"],["英語","英語"],["中国語","中国語"],["フランス語","フランス語"],["イタリア語","イタリア語"],["スペイン語","スペイン語"],["韓国語","韓国語"]], include_blank: "選択してください",class:"form-control col-sm-7" %>
          </div>
          

         <div class="form-group row">
            <%= f.label :profile, "プロフィールを記入" , class:"col-form-label" %><br>
            <%= f.text_area :profile, class:"col-sm-10 offset-sm-2 form-control", rows:10 %>
         </div>
         
            
        <div class="row">
        <%= f.submit "プロフィールを更新する", class:"btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
        
    </div>

            