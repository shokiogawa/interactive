
 <div class="row">
    <aside class="offset-sm-1 col-sm-3">
        <div class="card" style="width: 22rem;">
            <div class="card-header">
                <h5 class="card-title"><%= @user.name %></h5>
            </div>
            <div class="card-body">
                
             
                <% if @user.image_url %>
                     <%= image_tag @user.image_url %>
                    <% else %>
                      <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 300 }) %>" alt="">
                    <% end %>
                
                
            
                <p class="card-text">母国語:&nbsp;&nbsp;&nbsp;&nbsp;<%= @user.lang1 %></p>
                
                <p class="card-text">プロフィール<br><%= @user.profile %></p>
                
                <a href="<%= followings_user_path(@user) %>">フォロー数 <span><%= @count_followings %></span></a></br>
                <a href="<%= followers_user_path(@user) %>" >フォロワー数<span><%= @count_followers %></span></a>
                <% if current_user == @user %>
                 <div>
                  <%= link_to "プロフィール編集", edit_user_path(@user) %>
                 </div>
                <% end %>
                
                <div class="mt-3">
                  <%= render "relationships/follow_button", user: @user %>
                </div>
                <div class="text-right mt-4">
                <a href="#" class="btn btn-primary">Chat</a>
                </div>
            </div>
        </div>
    </aside>
    <div class="col-sm-6 offset-sm-1">
        <div class="">
            <h4>投稿一覧</h4>
            <%= link_to "投稿する", new_post_path %>
        </div>
        <%= render "posts/posts" , posts: @post %>
       
    </div>
</div>
