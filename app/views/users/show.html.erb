
 <div class="row">
    <aside class="offset-sm-1 col-sm-3">
        <div class="card" style="width: 25rem;">
                   <% if @user.image_url %>
                     <%= image_tag @user.image_url ,class:"card-img-top"%>
                    <% else %>
                      <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 300 }) %>" alt="">
                    <% end %>
            
            <div class="card-body">
                <h6><%= @user.name %></h6>
                <p class="card-text">学ぶ言語:&nbsp;&nbsp;&nbsp;&nbsp;<%= @user.lang1 %></p>
                <p class="card-text">母国語:&nbsp;&nbsp;&nbsp;&nbsp;<%= @user.language&.lang2 %></p>
                <p class="card-text">プロフィール<br><%= @user.profile %></p>
                
                
                
              <div class="row">
                  
                <div class="col-sm-5">
                <div class="followers">
                <a id="followings" href="<%= followings_user_path(@user) %>">フォロー数 <span><%= @count_followings %></span></a></br>
                <a  id="followers" href="<%= followers_user_path(@user) %>" >フォロワー数<span><%= @count_followers %></span></a>
                </div>
                <% if current_user == @user %>
                 <div>
                  <%= link_to "プロフィール編集", edit_user_path(@user) %>
                 </div>
                <% end %>
                </div>
             
                <div class="col-sm-4">
                  <div class="text-right mt-1">
                   <a href="#" class="btn btn-primary">Chat</a>
                  </div>
                </div>
                
               </div>
               
               
                
                <div class="row">
                  <div class="mt-3 offset-sm-4" id="follow_form">
                  <%= render "relationships/follow_button", user: @user %>
                  </div>
                </div>
                
                
                
            </div>
        </div>
    </aside>
    <div class="col-sm-6 offset-sm-1">
        <div class="row">
            <h4 class="col-sm-2">投稿一覧</h4>
            
            <% if current_user == @user %>
            <div class="col-sm-5 offset-sm-5 mb-4">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
               新規投稿
            </button>
            </div>
            <% end %>
            
        </div>
        <div class="posts">
        <%= render "posts/posts" , posts: @posts %>
        </div>
       
    </div>
</div>




<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
     <%= form_with model: @post do |f| %>
      <div class="modal-body">
        <div class="form-group row">
            <%= f.label :title, "タイトル", class: "col-form-label col-sm-3" %>
            <%= f.text_field :title, class: "form-control col-sm-8" %>
        </div>
        
        <div class="form-group row mt-5">
            <%= f.label :content, "記入欄", class: "col-form-label col-sm-3" %>
            <%= f.text_area :content, class: "form-control col-sm-8", rows:10 %>
        </div>
        
         <div class="form-group row">
           <%= f.label :category ,"カテゴリー", class: "col-form-label col-sm-3" %>
           <div class="col-sm-8">
            <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
           
                  <%= category.label do %>
                     <%= category.check_box %>
                     <%= category.text  %>
                  <% end %>
                  
           <% end %>
           </div>
    　</div>
        
      
        
       
        
        
    　</div>
    　 <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <%= f.submit "投稿する", class:"btn btn-primary" %>
      </div>
    　<% end %>
 　　</div>

      </div>
      
    </div>
  </div>
</div>
