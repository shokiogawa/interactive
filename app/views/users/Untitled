<div class="row">
    <div class="col-sm-4">
<% @comments.each do |c| %>    
    <div class="row ml-5">
        <div class="media-body ml-5 mb-3 mt-3 class-sm-9 border-top border-bottom">
            <%= link_to c.user.name, user_path(c.user) %>
            <%= c.created_at %>
            <p class="mt-4"><%= c.content %></p>
            <% if current_user == c.user %>
              <%= link_to "コメントを削除" , c, method: :delete %>
            <% end %>
        </div>
    </div>
<% end %>
