
<% if posts.any? %> 
<div class=row>
    <div class="col-sm-12">
        <ul class="list-unstyled row">
             <% posts.each do |post| %>
           <li class="media col-sm-12 border-top border-bottom">
               <% if post.user.image_url %>
                  <%= image_tag post.user.image_url(:thumb) , class:"mb-3 mt-3" %>
               <% else %>
                  <img class="rounded img-fluid" src="<%= gravatar_url(post, { size: 100 }) %>" alt="">
               <% end %>
              <div class="media-body ml-5 mb-3 mt-3">
                  <%= link_to post.user.name, user_path(post.user) ,class:"mr-3"%>
                  <%= post.created_at %>
                  <h5 class="mt-3"><%= post.user.name %></h5>
                  <%= post.content %><br>
                  <%= link_to "投稿を編集する", edit_post_path(post.user) %>
                  <% if current_user == post.user %>
                   <%= link_to "メッセージを削除", post, method: :delete, data: { confirm: "本当に削除してよろしいですか? "}, class:"" %>
               <% end %>
              
             </div>
            </li>
             <% end %>
        </ul>
    </div>
    <%= paginate posts %>
</div>
<% end %>

<%# 


                  
              　　<%= form_with(model: post.comments.build ,local:true) do |f| %>
               　　　　<div class="form-group">
                   　　　<%= f.label :content, "コメント追加" %>
                   　　　<%= f.text_field :content %>
                   　　　<%= hidden_field_tag :user_id, current_user.id %>
                   　　　<!--下記のhidden_field_tagを追加します-->
                        <%= hidden_field_tag :post_id ,post.id %>
                   　　　<%= f.submit "追加", class: "" %>
                　　　</div>
              　　<% end %>