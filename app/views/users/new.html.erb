<div class="text-center mb-2 mt-5">
    <h4 class="text-info">Talk Timeのアカウントを作りサインインしよう</h4>
</div>

<div class="row">
    <div class="col-sm-4 offset-sm-4 mt-5">
        <%= form_with(model: @user, local:true) do |f| %>
         <%= render 'layouts/error_messages', model: @user %>
        
        <div class="form-group">
            <%= f.label :email, "Email" %>
            <%= f.email_field :email, class: "form-control" %>
        </div>
        
        <div class="form-group">
            <%= f.label :password, "Password" %><p>※パスワードは6文字以上にしてください</p>
            <%= f.password_field :password, class: "form-control" %>
        </div>
        
        <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class:"form-control" %>
        </div>
        
        <div class="form-group ">
            <%= f.label :lang1, "学習言語", class:"col-form-label " %>
            <%= f.collection_select(:language1_id, Language1.all, :id, :lang1, :prompt => "選択してください") %>
          </div>
        
         <div class="form-group ">
            <%= f.label :language_id, "母国語", class:"col-form-label" %>
            <%= f.collection_select(:language_id, Language.all, :id, :lang2, :prompt => "選択してください") %>
          </div>
        
        <%= f.submit "アカウントを登録する" , class: "btn btn-danger btn-block mt-5" %>
        
        <% end %>
    </div>
</div>