
            
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  おすすめユーザー
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          
       <div class="row">
         <div class="col-sm-12">
          <ul class="list-unstyled row">
            <% @users.each do |user| %>
            <li class="media mb-3 border-bottom col-sm-12">
                <% if user.image_url %>
                 <%= image_tag user.image_url(:thumb), class:"rounded-circle" %>
                <% else %>
                 <img class="rounded img-fluid" src="<%= gravatar_url(user, { size: 100 }) %>" alt="">
                <% end %>
                <div class="media-body ml-5 text-justify">
                <h5><%= link_to user.name , user_path(user) %></h5><p> 学習言語:<%= user.lang1 %>&nbsp;&nbsp;母国語:<%= user.language&.lang2 %></p>
                 <p><%= user.profile %></p>
               </div>
            </li>
            <% end %>
         </ul>
         </div>
       </div>
        
        
        
        
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>